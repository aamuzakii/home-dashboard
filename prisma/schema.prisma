generator client {
  provider   = "prisma-client"
  output     = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                Int     @id @default(autoincrement())
  email             String  @unique
  name              String?
  posts             Post[]

  weeklyMinutes     Int      @default(0)   // total worked minutes this week
  obligationMinutes Int      @default(2400) // default 40 hours = 40*60
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  Int?
}
